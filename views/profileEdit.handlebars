

<div class="container-profile-edit">
    <h2 id="header-profile-edit">Edit your profile</h2>
        {{#if error}}
        <h2>{{> error-page}}</h2>
        {{/if}}
    <form Method="POST" class="profile-input-edit">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input type="text" name="firstname" placeholder="firstname"value="{{firstname}}">
        <input type="text" name="lastname" placeholder="lastname"value="{{lastname}}">
        <input type="text" name="email" placeholder="email"value="{{email}}">
        <input type="password" name="password" placeholder="password" value="">
        <input type="text" name="age" placeholder="age"value="{{age}}">
        <input type="text" name="city" placeholder="city"value="{{city}}">
        <input type="url" name="homepage" placeholder="homepage"value="{{homepage}}">
        <button>update</button>
        {{> logoutButton}}
    </form>
</div>
